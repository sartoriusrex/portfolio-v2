<section id="contact" >
	<div class="contact-background-one">
		<div class="card contact-title-container">
			<h2>Contact</h2>
			<p>Send me a message to check my availability or to grab a coffee.</p>
		</div>
	</div>

	<form
		class="card contact-form"
		name="contact-form"
		data-netlify="true"
		data-netlify-recaptcha="true"
		netlify-honeypot="gender"
		method="POST"
		action="/"
	>
		<p>You can reach me by 
			<a 
				href="mailto:dmai.developer@gmail.com"
				rel="noopener noreferrer"
				target="_blank"
			>email
			</a>
			, this form, or download 
			<a 
				id="resume-link"
				href="imgs/mai_resume.pdf"
				rel="noopener noreferrer"
				target="_blank"
			>my resume.
			</a>
		</p>

		<label for="email">email</label>
		<input
			type="email"
			name="email"
			placeholder="email"
			required
		>

		<label 
			class="gender" 
			for="gender"
		>gender: if you are human, do not fill this out.</label>
		<input
			type="text"
			name="gender"
			placeholder="gender"
			class="gender"
		>

		<label for="subject">subject</label>
		<input
			type="text"
			name="subject"
			placeholder="subject"
			required
		>

		<label for="message">message</label>
		<textarea
			name="message"
			placeholder="message"
			required
		></textarea>

		<button type="submit">Send</button>
	</form>
</section>