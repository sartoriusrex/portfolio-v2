<main>
    <% include ../components/header %>

    <section class="container--projects">
        <h1>Some Projects</h1>

        <p>Here's a short list of projects I have or am currently working on. Feel free to step through the code, make
            some pull requests, or visit the live sites.</p>

        <p>Be patient, some of them are asleep on a Heroku Dyno.</p>

        <ul class="project-list">
            <% projects.forEach( function(project) { %>
            <li class="project-item hidden">
                <div class="container--details">
                    <a href="<%= project.links.live %>" target="_blank" rel="noopener noreferrer">
                        <h4><%= project.name %></h4>
                    </a>

                    <div class="container--project-img">
                        <img src="<%=project.images[0] %>" alt="project image">
                    </div>

                    <details>
                        <summary>Description</summary>
                        <p><%= project.description %></p>
                    </details>

                    <details>
                        <summary>Links</summary>
                        <ul>
                            <% Object.keys(project.links).forEach( function(key){ %>
                            <li>
                                <a href="<%=project.links[key]%>" target="_blank" rel="noopener noreferrer">
                                    <%= key %>
                                </a>
                            </li>
                            <% }) %>
                        </ul>
                    </details>

                    <details>
                        <summary>Tech Used</summary>
                        <p><%= project.built %></p>
                    </details>

                </div>

            </li>
            <% }) %>
        </ul>
    </section>

</main>
<% include ../components/footer %>